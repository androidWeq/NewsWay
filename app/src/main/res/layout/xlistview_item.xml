<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_100_dp"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dimen_3_dp"
    android:paddingLeft="@dimen/dimen_6_dp"
    android:background="@color/white"
    android:paddingRight="@dimen/dimen_10_dp"
    android:paddingTop="@dimen/dimen_3_dp">

    <ImageView
    android:layout_width="@dimen/dimen_120_dp"
    android:layout_height="@dimen/dimen_90_dp"
    android:id="@+id/news_xlistview_item_img"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dimen_100_dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_xxl"
            android:maxLines="1"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/news_xlistview_item_title"/>
        <TextView
            android:layout_marginTop="@dimen/dimen_7_dp"
            android:id="@+id/news_xlistview_item_digest"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/textsize_m"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

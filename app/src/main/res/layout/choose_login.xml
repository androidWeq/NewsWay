<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_60_dp"
        android:src="@drawable/c23_1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/c23_2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10_dp"/>



    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_20_dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_l"
            android:text="请选择你喜欢的方式"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:textSize="@dimen/textsize_xll"
            android:text="登录小明地铁"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_30_dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/choose_login_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/c23_weixin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginLeft="@dimen/dimen_20_dp"
                android:layout_marginRight="@dimen/dimen_20_dp"
                android:textSize="@dimen/textsize_xxxxl"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/choose_login_shouji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/c23_dianhua"/>
        </LinearLayout>


        <TextView
            android:id="@+id/choose_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BEB9B4"
            android:text="取消"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/dimen_20_dp"
            android:layout_marginBottom="@dimen/dimen_40_dp"
            android:textSize="@dimen/textsize_xxxl"/>

    </LinearLayout>



</LinearLayout>

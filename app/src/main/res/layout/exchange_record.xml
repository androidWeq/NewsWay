<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60_dp"
    android:background="@color/mediumaquamarine"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/exchange_record_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:src="@drawable/left_arrow"/>

    <TextView
        android:id="@+id/exchange_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有兑换项"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_xl"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:src="@drawable/left_arrow"/>
</LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/gray"
        android:dividerHeight="@dimen/dimen_1_dp"
        android:id="@+id/exchange_record_listview">

    </ListView>

</LinearLayout>

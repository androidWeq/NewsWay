<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/c23_login">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dp">
        <ImageView
            android:id="@+id/judge_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20_dp"
            android:src="@drawable/c23_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="手机注册/登录"
            android:textSize="@dimen/textsize_xl"/>
    </RelativeLayout>


    <EditText
        android:id="@+id/judge_login_phone"
        android:layout_marginTop="@dimen/dimen_50_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入要注册/登录的手机号"
        android:background="@null"
        android:textColor="@color/white"
        android:inputType="phone"
        android:textSize="@dimen/textsize_m"
        android:layout_marginLeft="@dimen/dimen_50_dp"
        android:layout_marginRight="@dimen/dimen_50_dp"
        android:maxLines="1"
        android:maxLength="11"
        android:textColorHint="#8D8A85"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#807D78"
        android:layout_marginLeft="@dimen/dimen_50_dp"
        android:layout_marginRight="@dimen/dimen_50_dp"/>


    <TextView
        android:id="@+id/judge_login_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_l"
        android:textColor="@color/white"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:enabled="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:text="登录/注册"/>

</LinearLayout>
